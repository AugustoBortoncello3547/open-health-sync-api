{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "NodeNext",
    "target": "ESNext",
    "types": [],
    "lib": ["DOM"],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "esModuleInterop": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "eslint.config.mts"],
  "include": ["./src/**/*.ts", "api/index.ts"]
}
