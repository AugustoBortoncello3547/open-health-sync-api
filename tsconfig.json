{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "nodenext",
    "target": "ES2020",
    "types": ["node"],
    "lib": ["ES2020", "DOM"],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "strict": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "**/*.test.ts", "eslint.config.mts", "fast_test.ts", "dist"]
}
